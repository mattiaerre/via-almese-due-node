<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>@model.mainTitle v@model.version</title>
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon" /> 
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
		<header>
			<div class="row">
				<div class="col-md-offset-2 col-md-8">
					<ul class="nav nav-pills nav-justified">
						@model.languages.forEach(function(language){
							<li role="presentation"><a href="/@language.value">@language.label</a></li>
						})
					</ul>
				</div>
			</div>
		</header>

		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<h1>@model.mainTitle</h1>
				<address>
					<strong>@model.address</strong>
				</address>
			</div>
		</div>
		<div class="row hidden">
			<div class="col-md-offset-2 col-md-8" ng-controller="carouselController">
				<div class="jumbotron" style="padding: 0.5em !important;">
					<div id="main-carousel" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							<li data-target="#main-carousel" data-slide-to="0" class="active"></li>
							<li data-target="#main-carousel" data-slide-to="1" class=""></li>
							<li data-target="#main-carousel" data-slide-to="2" class=""></li>
							<li data-target="#main-carousel" data-slide-to="3" class=""></li>
							<li data-target="#main-carousel" data-slide-to="4" class=""></li>
						</ol>
						<div class="carousel-inner">
							<div class="item active">
								<img src="/images/IMG_1114.JPG" alt="[TODO]" class="img-rounded img-responsive">
							</div>
							<div class="item">
								<img src="/images/IMG_1122.JPG" alt="[TODO]" class="img-rounded img-responsive">
							</div>
							<div class="item">
								<img src="/images/IMG_1123.JPG" alt="[TODO]" class="img-rounded img-responsive">
							</div>
							<div class="item">
								<img src="/images/IMG_1126.JPG" alt="[TODO]" class="img-rounded img-responsive">
							</div>
							<div class="item">
								<img src="/images/IMG_1127.JPG" alt="[TODO]" class="img-rounded img-responsive">
							</div>
						</div>
						<a class="left carousel-control" href="#main-carousel" role="button" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left"></span>
						</a>
						<a class="right carousel-control" href="#main-carousel" role="button" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right"></span>
						</a>
					</div>

				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<div class="jumbotron" style="padding: 1.5em; font-size: 1.5em;">
					<h2>@model.descriptionHeading</h2>
					@model.descriptionIntro
					<ul>
						<li>@model.descriptionFirstFloor</li>
						<li>@model.descriptionGroundFloor</li>
					</ul>
					@model.descriptionGarden
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<div class="jumbotron" style="padding: 1.5em; font-size: 1.5em;">
					<h2>@model.characteristicsHeading</h2>
					<ul>
						@model.characteristics.forEach(function(characteristic){
							<li>@characteristic</li>
						})
					</ul>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<div class="jumbotron" style="padding: 0.5em !important;">
					<ui-gmap-google-map center="map.center" zoom="map.zoom">
						<ui-gmap-marker coords="marker.coords" options="marker.options" events="marker.events" idkey="marker.id"></ui-gmap-marker>
					</ui-gmap-google-map>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<div class="jumbotron" style="background: gold !important; padding: 2em; font-size: 1.5em;">
					<strong>@model.mainTitle</strong> @model.viaAlmeseDueIsOnSale
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<contact-form ng-controller="contactFormController"></contact-form>
				<toaster-container></toaster-container>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<address>
					<strong>@model.address</strong>
				</address>
			</div>
		</div>
		<footer>
			<div class="row">
				<div class="col-md-offset-2 col-md-8">
					<hr />
					<small class="pull-right">&copy; @model.year @model.mainTitle v@model.version</small>
				</div>
			</div>
			<div class="row">
				<div class="col-md-offset-2 col-md-8">&nbsp;</div>
			</div>
		</footer>
	</div>
	<script>
		(function (i, s, o, g, r, a, m) {
			i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
				(i[r].q = i[r].q || []).push(arguments);
			}, i[r].l = 1 * new Date(); a = s.createElement(o),
			m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g;
			m.parentNode.insertBefore(a, m);
		})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

		ga('create', 'UA-54446639-3', 'auto');
		ga('send', 'pageview');
	</script>
</body>
</html>
